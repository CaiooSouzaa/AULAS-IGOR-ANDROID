<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ValorPix">

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Qual é o valor da transferência ?"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/saldoConta"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/valorTransferir"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="R$0,00"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/botaoValorPix"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="320dp"
        android:layout_marginRight="35dp"
        android:backgroundTint="#ABABAB"
        android:paddingBottom="8dp"
        android:drawableBottom="@drawable/seta_para_a_direita"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tela2">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/botaoAlunos"
        android:layout_width="328dp"
        android:layout_height="78dp"
        android:layout_marginTop="10dp"
        android:onClick="Tela3"
        android:text="CADASTRO ALUNOS"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#852016"
        />

    <Button
        android:id="@+id/botaoInstituicoes"
        android:layout_width="328dp"
        android:layout_height="78dp"
        android:onClick="Tela4"
        android:text="CADASTRO INSTITUIÇÃO"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#852016"
        />

    <Button
        android:id="@+id/botaoVisuAlunos"
        android:layout_width="328dp"
        android:layout_height="78dp"
        android:onClick="Tela5"
        android:text="VISUALIZAR ALUNOS CADASTRADOS"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#852016"
        />

    <Button
        android:id="@+id/cadastarBecas"
        android:layout_width="328dp"
        android:layout_height="78dp"
        android:onClick="Tela8"
        android:text="CADASTRO BECAS"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#852016"
        />

    <Button
        android:id="@+id/quantidadeBecas"
        android:layout_width="328dp"
        android:layout_height="78dp"
        android:onClick="Tela9"
        android:text="QUATIDADE DE BECAS"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#852016"
        />

</LinearLayout>